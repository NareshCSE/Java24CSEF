			System.out.println("enter any one option from above:\n");
			Scanner iput=new Scanner(System.in);
			int n=iput.nextInt();
			iput.nextLine();
			
			if(n==1) {
				 amount=0;
			}
			switch(n) {
			case 1:
			{
				System.out.println("enter your name:");
				String N=iput.nextLine();
				System.out.println("enter aadhar number:");
			    double a=iput.nextInt();
			    iput.nextLine();
			    System.out.println("enter pan number:");
			    double p=iput.nextInt();
			    iput.nextLine();
			    System.out.println("enter account number:");
			     account=iput.nextInt();
			     iput.nextLine();
			    
			    break;
			}
			case 2:
			{
				System.out.println("enter account number:");
			    double  account1=iput.nextInt();
			    iput.nextLine();
			    if(account==account1) {
			    System.out.println("enter amount:");
			    double p=iput.nextInt();
			    iput.nextLine();
			  
			    amount+=p;
			    }else {
			    	System.out.println("recheck ur account number");
			    }
			    break;
			}
			case 3:
			{
				System.out.println("enter account number:");
