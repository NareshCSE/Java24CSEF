package labprograms;
import java.util.Scanner;


public class pattern2 {
	public static void main(String[] args) {
		Scanner range=new Scanner(System.in);

		System.out.println("Enter range");

		int n=range.nextInt();

		for(int i=1;i<=n;i++) {

			for(int space=1;space<=n-i;space++) {

				System.out.print(" ");

			}

			for(int j=1;j<i+1;j++) {

				System.out.print("*");
			}

			System.out.println();

		}
		
	}
	
}	
