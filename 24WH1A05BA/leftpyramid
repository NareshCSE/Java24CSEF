package labprograms;
import java.util.Scanner;

public class patterns {

	public static void main(String[] args) {
		Scanner range=new Scanner(System.in);
		System.out.println("enter range");
		int n=range.nextInt();
		for(int i=1;i<=n;i++) {
			for(int j=1;j<i+1;j++) {
				System.out.print("* ");
			}
			System.out.println();
		
		}	
	

   }
}
