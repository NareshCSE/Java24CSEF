import java.util.Random;

class NumberGenerator extends Thread {
    private final SharedData data;

    public NumberGenerator(SharedData data) {
        this.data = data;
    }

    @Override
    public void run() {
        Random rand = new Random();
        int num = rand.nextInt(100);  
        data.setNumber(num);
        System.out.println("Generated Number: " + num);

        synchronized (data) {
            data.notifyAll();  
        }
    }
}

class SquareCalculator extends Thread {
    private final SharedData data;

    public SquareCalculator(SharedData data) {
        this.data = data;
    }

    @Override
    public void run() {
        synchronized (data) {
            try {
                data.wait(); 
            } catch (InterruptedException e) {
                e.printStackTrace();
            }

            int num = data.getNumber();
            if (num % 2 == 0) {
                System.out.println("Square of " + num + " = " + (num * num));
            }
        }
    }
}

class CubeCalculator extends Thread {
    private final SharedData data;

    public CubeCalculator(SharedData data) {
        this.data = data;
    }

    @Override
    public void run() {
        synchronized (data) {
            try {
                data.wait(); 
            } catch (InterruptedException e) {
                e.printStackTrace();
            }

            int num = data.getNumber();
            if (num % 2 != 0) {
                System.out.println("Cube of " + num + " = " + (num * num * num));
            }
        }
    }
}

class SharedData {
    private int number;

    public synchronized void setNumber(int number) {
        this.number = number;
    }

    public synchronized int getNumber() {
        return number;
    }
}

public class MultiThreadApp {
    public static void main(String[] args) {
        SharedData data = new SharedData();

        Thread generator = new NumberGenerator(data);
        Thread square = new SquareCalculator(data);
        Thread cube = new CubeCalculator(data);

        square.start();
        cube.start();
        generator.start();
    }
}
