import java.util.HashSet;
import java.util.Scanner;
import java.util.Set;

class Product {
    private int id;
    private String name;
    private double price;

    public Product() {}

    public Product(int id, String name, double price) {
        this.id = id;
        this.name = name;
        this.price = price;
    }

    public int getId() {
        return id;
    }

    public String getName() {
        return name;
    }

    public double getPrice() {
        return price;
    }

    public void setId(int id) {
        this.id = id;
    }

    public void setName(String name) {
        this.name = name;
    }

    public void setPrice(double price) {
        this.price = price;
    }

    @Override
    public int hashCode() {
        return Integer.hashCode(id);
    }

    @Override
    public boolean equals(Object obj) {
        if(this == obj) return true;
        if(obj == null || getClass() != obj.getClass()) return false;
        Product other = (Product) obj;
        return this.id == other.id;
    }

    @Override
    public String toString() {
        return "Product [Id=" + id + ", Name=" + name + ", Price=" + price + "]";
    }
}

public class ECommerceApp {
    private static Set<Product> products = new HashSet<>();
    private static Scanner scanner = new Scanner(System.in);

    public static void main(String[] args) {
        boolean exit = false;
        while(!exit) {
            System.out.println("1. Seller: Add Product");
            System.out.println("2. Customer: Order Products");
            System.out.println("3. Display All Products");
            System.out.println("4. Exit");
            System.out.print("Enter your choice: ");

            int choice = scanner.nextInt();
            scanner.nextLine();

            switch(choice) {
                case 1:
                    addProduct();
                    break;
                case 2:
                    orderProducts();
                    break;
                case 3:
                    displayProducts();
                    break;
                case 4:
                    exit = true;
                    break;
                default:
                    System.out.println("Invalid choice. Try again.");
            }
        }
    }

    private static void addProduct() {
        System.out.print("Enter Product Id: ");
        int id = scanner.nextInt();
        scanner.nextLine();
        System.out.print("Enter Product Name: ");
        String name = scanner.nextLine();
        System.out.print("Enter Product Price: ");
        double price = scanner.nextDouble();
        scanner.nextLine();

        Product p = new Product(id, name, price);
        if(products.add(p)) {
            System.out.println("Product added successfully.");
        } else {
            System.out.println("Product with this Id already exists.");
        }
    }

    private static void orderProducts() {
        if(products.isEmpty()) {
            System.out.println("No products available to order.");
            return;
        }

        double totalPrice = 0;
        Set<Product> orderedProducts = new HashSet<>();
        System.out.println("Enter product Ids you want to order (comma separated): ");
        String line = scanner.nextLine();
        String[] ids = line.split(",");

        for(String idStr : ids) {
            try {
                int id = Integer.parseInt(idStr.trim());
                Product temp = new Product();
                temp.setId(id);
                if(products.contains(temp)) {
                    for(Product p : products) {
                        if(p.equals(temp)) {
                            orderedProducts.add(p);
                            totalPrice += p.getPrice();
                        }
                    }
                } else {
                    System.out.println("Product with Id " + id + " not found.");
                }
            } catch(NumberFormatException e) {
                System.out.println(idStr + " is not a valid product Id.");
            }
        }

        if(!orderedProducts.isEmpty()) {
            System.out.println("Ordered Products:");
            for(Product p : orderedProducts) {
                System.out.println(p);
            }
            System.out.printf("Total Price: %.2f\n", totalPrice);
        } else {
            System.out.println("No valid products ordered.");
        }
    }

    private static void displayProducts() {
        if(products.isEmpty()) {
            System.out.println("No products available.");
        } else {
            for(Product p : products) {
                System.out.println(p);
            }
        }
    }
}
