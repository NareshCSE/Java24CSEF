package add;
import java.util.Scanner; 
public class Pattern3 {

	public static void main(String[] args) {
		Scanner scanner=new Scanner(System.in);
		System.out.println("enter a number:");
		int n=scanner.nextInt();
		
		int i,j,k;
		
		for(i=1;i<=n;i++) {
			for(int s=1;s<=n-i;s++) {  
				System.out.print(" ");
				}
			for(j=1;j<i+1;j++) {
				System.out.print(j);
			}
			for(k=i-1;k>0;k--) {
				System.out.print(k);
			}
			System.out.println();
			}
		scanner.close();
		}

	}


