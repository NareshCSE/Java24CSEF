package add;
import java.util.Scanner;
public class ass4b {

	public static void main(String[] args) {
	    Scanner scanner=new Scanner(System.in);
	    System.out.println("enter a number:");
	    int n=scanner.nextInt();
	    
	    int i,j;
	    
	    for(i=1; i<=n; i++) {
	    	for(j=1; j<=i; j++) {
	    		System.out.print("*");
	    		
	    	}
	    	
	        System.out.println();
	    	
	    }
	    

	}

}
