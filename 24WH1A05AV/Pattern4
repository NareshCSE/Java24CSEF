import java.util.*;
public class Pattern4 {

	public static void main(String[] args) {
		Scanner read = new Scanner(System.in);
		System.out.println("Enter a number:");
		int number = read.nextInt();
		for(int i=1;i<=number;i++) {
			for(int j=1;j<=number-i;j++) {
				System.out.print(" ");
			}
			for(int j=1;j<=i;j++) {
				System.out.print(j+" ");
			}
			for(int j=i-1;j>0;j--) {
				System.out.print(j+" ");
			}
			System.out.println();
		}
		read.close();

	}

}
