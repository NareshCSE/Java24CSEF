import java.util.*;
public class Pattern1 {

	public static void main(String[] args) {
		Scanner read = new Scanner(System.in);
		System.out.println("Enter a number:");
		int num = read.nextInt();
		 for(int i=0;i<num;i++) {
			 for(int j=0;j<=i;j++) {
				 System.out.print("* ");
			 }
			 System.out.println();
		 }
		 read.close();

	}

}
