import java.util.HashSet;
import java.util.Scanner;

class Product{
	private int id;
	private String name;
	private double price;
	
	public Product(int id,String name,double price) {
		this.id=id;
		this.name=name;
		this.price=price;
	}
	public int getId() {
		return id;
	}
	public String getName() {
		return name;
	}
	public double getPrice() {
		return price;
	}
    public String toString() {
    	return "Product Id:"+id +",Name:"+name+",Price:"+price;
    }
}

class Seller{
	private HashSet<Product> productlist=new HashSet<>();
	
	public void addProduct(Product p) {
		productlist.add(p);
	}
	public HashSet<Product> getProducts(){
		return productlist;
		}
	public void showAllProducts() {
		System.out.println("\nAvailable Products:");
		for(Product p:productlist) {
			System.out.println(p);
	}
 }
}

class Customer{
	public void orderProduct(HashSet<Product> productlist) {
		Scanner sc=new Scanner(System.in);
		double total=0;
		System.out.print("Enter how many products you want to Order:");
		int n=sc.nextInt();
		for(int i=0;i<n;i++) {
		System.out.print("Enter the Product:");
		String name=sc.next();
		
		for(Product p:productlist) {
			if(p.getName().equalsIgnoreCase(name)) {
				//System.out.println("Product Ordered:"+p);
				total+=p.getPrice();	
			}
		}	
		}
		System.out.println("Total:"+total);
	}
}

public class EcommerceApp {

	public static void main(String[] args) {
		Seller seller=new Seller();
		seller.addProduct(new Product(1,"Laptop",50000));
		seller.addProduct(new Product(2,"Mobile",20000));
		seller.addProduct(new Product(3,"PowerBank",10000));
		
		seller.showAllProducts();
		Customer customer=new Customer();
		customer.orderProduct(seller.getProducts());

	}

}
