package labprograms;
import java.util.Scanner;
public class pattern2 {

	public static void main(String[] args) {
		Scanner input=new Scanner(System.in);
		System.out.print("enter the range: ");
		int n=input.nextInt();
		printPattern(n);
	}
	public static void printPattern(int n)
	{
		int i,j,k;
		for(i=n;i>=1;i--)
		{
			for(j=1;j<i;j++)
			{
				System.out.print(" ");
			}
			for(k=0;k<=n-i;k++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
		
	}

}
