package labprograms;
import java.util.*;
public class Pattern2 {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.print("Enter the number of rows:");
		int rows=sc.nextInt();
		int i,j,k;
		for(i=1;i<=rows;i++)
		{
			for(k=1;k<=rows-i;k++)
			{
				System.out.print("  ");
			}
			for(j=1;j<=i;j++)
			{
				System.out.print(" *");
			}
		System.out.println();
		}
		sc.close();
	}
}
