package labprograms;
import java.util.*;
public class Pattern1 {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.print("enter the numbers of rows:");
		int rows=sc.nextInt();
		int i,j;
		for(i=1;i<=rows;i++)
		{
			for(j=1;j<=i;j++)
			{
				System.out.print("*  ");
			}
			System.out.println();
		}
		sc.close();
	}
}
