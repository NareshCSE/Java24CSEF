import java.util.*;
interface Restaurant {
 void printRestaurantName();
 void addItem(RestaurantApp.Item item);
 RestaurantApp.Item[] getMenu();
 RestaurantApp.Order placeOrder(int[] itemIds);
 double generateBill(int orderId);
}
public class RestaurantApp {
 static class Item {
     private int itemId;
     private String name;
     private double price;
     public Item(int itemId, String name, double price) {
         this.itemId = itemId;
         this.name = name;
         this.price = price;
     }
     public int getItemId() { return itemId; }
     public String getName() { return name; }
     public double getPrice() { return price; }
 }
 static class Order {
     private int orderId;
     private List<Item> items;
     private double total;

     public Order(int orderId, List<Item> items, double total) {
         this.orderId = orderId;
         this.items = items;
         this.total = total;
     }
     public int getOrderId() { return orderId; }
     public List<Item> getItems() { return items; }
     public double getTotal() { return total; }
 }
 static class KFC implements Restaurant {
     private List<Item> menu = new ArrayList<>();
     private Map<Integer, Order> orders = new HashMap<>();
     private int nextOrderId = 1;
     public void printRestaurantName() {
         System.out.println("Welcome to KFC!");
     }
     public void addItem(Item item) {
         menu.add(item);
     }
     public Item[] getMenu() {
         return menu.toArray(new Item[0]);
     }
     public Order placeOrder(int[] itemIds) {
         List<Item> orderedItems = new ArrayList<>();
         double total = 0.0;

         for (int id : itemIds) {
             for (Item item : menu) {
                 if (item.getItemId() == id) {
                     orderedItems.add(item);
                     total += item.getPrice();
                     break;
                 }
             }
         }
         Order order = new Order(nextOrderId, orderedItems, total);
         orders.put(nextOrderId, order);
         System.out.println("Order placed successfully. Order ID: " + nextOrderId);
         nextOrderId++;
         return order;
     }
     public double generateBill(int orderId) {
         Order order = orders.get(orderId);
         if (order == null) {
             System.out.println("Invalid Order ID");
             return 0.0;
         }
         double subtotal = order.getTotal();
         double tax = subtotal * 0.06;
         double total = subtotal + tax;
         System.out.println("\n--- Bill for Order ID: " + orderId + " ---");
         for (Item item : order.getItems()) {
             System.out.printf("%s - $%.2f\n", item.getName(), item.getPrice());
         }
         System.out.printf("Subtotal: $%.2f\n", subtotal);
         System.out.printf("Tax (6%%): $%.2f\n", tax);
         System.out.printf("Total: $%.2f\n", total);
         return total;
     }
 }
 public static void main(String[] args) {
     Restaurant kfc = new KFC(); // Late binding
     kfc.printRestaurantName();
     kfc.addItem(new Item(1, "Zinger Burger", 5.99));
     kfc.addItem(new Item(2, "Chicken Bucket", 12.49));
     kfc.addItem(new Item(3, "French Fries", 2.99));
     System.out.println("\n--- Menu ---");
     for (Item item : kfc.getMenu()) {
         System.out.printf("%d. %s - $%.2f\n", item.getItemId(), item.getName(), item.getPrice());
     }
     int[] itemIds = {1, 3}; 
     Order order = kfc.placeOrder(itemIds);
     kfc.generateBill(order.getOrderId());
 }
}
