package oopjp;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class TextCounterApp extends JFrame implements ActionListener {

    private JTextArea textArea;
    private JButton countButton;
    private JLabel charCountLabel;
    private JLabel wordCountLabel;

    public TextCounterApp() {
  
        setTitle("Text Counter");
        setSize(500, 400);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null); 
        setLayout(new BorderLayout(10, 10));

        textArea = new JTextArea();
        textArea.setLineWrap(true);
        textArea.setWrapStyleWord(true);
        JScrollPane scrollPane = new JScrollPane(textArea);
        add(scrollPane, BorderLayout.CENTER);

        JPanel bottomPanel = new JPanel();
        bottomPanel.setLayout(new GridLayout(3, 1, 5, 5));

        countButton = new JButton("Count Words and Characters");
        countButton.addActionListener(this);

        charCountLabel = new JLabel("Characters: 0");
        wordCountLabel = new JLabel("Words: 0");

        bottomPanel.add(countButton);
        bottomPanel.add(charCountLabel);
        bottomPanel.add(wordCountLabel);

        add(bottomPanel, BorderLayout.SOUTH);
    }

    @Override
    public void actionPerformed(ActionEvent e) {
 
        String text = textArea.getText();

        int charCount = text.length();

        String trimmedText = text.trim();
        int wordCount = 0;
        if (!trimmedText.isEmpty()) {
            wordCount = trimmedText.split("\\s+").length;
        }

        charCountLabel.setText("Characters: " + charCount);
        wordCountLabel.setText("Words: " + wordCount);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            TextCounterApp app = new TextCounterApp();
            app.setVisible(true);
        });
    }
}

