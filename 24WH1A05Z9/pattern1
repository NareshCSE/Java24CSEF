package in;
import java.util.Scanner;
public class pattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner num=new Scanner(System.in);
		System.out.print("Enter n value: ");
		int N= num.nextInt();
		for(int i=1;i<=N;i++) {
			for(int j=1;j<=i;j++) {
				System.out.printf("* ");
			}
			System.out.println();
		}
		

	}

}
