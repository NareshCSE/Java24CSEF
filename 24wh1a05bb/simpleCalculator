package labprogramme;
import java.util.Scanner;

public class simplecalculator {
	public static void main(String[] args) {
	  Scanner input = new Scanner(System.in);
	  System.out.println("Enter first number :");
	  int num1=input.nextInt();
	  System.out.println("Enter second number:");
	  int num2=input.nextInt();
      Scanner choice = new Scanner(System.in);
      System.out.println("Enter you choice +,-,*,/:");
      char ch = choice.next().charAt(0);
      switch(ch) {
        case '+':
    	   System.out.println("Addition of given two numbers:"+(num1+num2) );
    	   break;
        case '-':
      	  System.out.println("difference of given two numbers:"+(num1-num2));
      	  break;
        case '*':
      	  System.out.println("product of given two numbers:"+(num1*num2));
      	  break;
        case '/':
      	  System.out.println("division of given two numbers:"+(num1/num2));
      	  break; 
      	 default:
      		 System.out.println("Given input is invalid");
      }
     
	}
}
